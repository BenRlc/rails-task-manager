<div>
  <h1> <%= @task.title %></h1>
  <h2> <%= @task.details %></h2>
</div>
<div>
  <% if @task.completed %>
    <i class="far fa-check-square"></i> <p>This task is completed</p>
  <% else %>
    <i class="far fa-square"></i> <p>This task is not yet completed</p>
  <% end %>
  <%= link_to "Edit this task", edit_task_path %>
  <%= link_to "Back to list", tasks_path %>
</div>
